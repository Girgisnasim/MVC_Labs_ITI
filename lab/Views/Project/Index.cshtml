@{
    int i = 1;

}
@model List<Project>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Project Name</th>
            <th scope="col">Project Loction</th>
            <th scope="col">City</th>
            <th scope="col">Department</th>
            <th scope="col">More Details </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@(i++)</th>
                <td>@item.Pname</td>
                <td>@item.Plocation</td>
                <td>@item.City</td>
                <td>@item.DeptProject.Dname</td>
                <td><a href="/project/Details/@item.Pnumber"><i class="fa-solid fa-circle-info"></i></a></td>
            </tr>
        }
    </tbody>
</table>

@section Slide_title {
    All Project
}