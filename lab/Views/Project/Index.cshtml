@{
    int i = 1;

}
@model List<Project>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Project Name</th>
            <th scope="col">Project Loction</th>
            <th scope="col">City</th>
@*             <th scope="col">Department</th>
 *@            <th scope="col">More Details </th>
            <th scope="col">Update Project </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@(i++)</th>
                <td>@item.Pname</td>
                <td>@item.Plocation</td>
                <td>@item.City</td>
@*                 <td>@item?.DeptProject.Dname</td>
 *@                <td><a href="/project/Details/@item.Pnumber"><i class="fa-solid fa-circle-info"></i></a></td>
                <td><a href="/project/getEditForm/@item.Pnumber"><button class="btn btn-primary">Update</button></a></td>


            </tr>
        }
        <div>
            <a href="/project/getaddform"><button class="btn btn-primary">Add</button></a>
        </div>
        
    </tbody>
</table>

@section Slide_title {
    All Project
}