@{
}
@model Project
<h1>Update Project</h1>
<form action="/project/Update">
    <input name="id" hidden value="@Model.Pnumber" />
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="@Model.Pname">
    </div>
    <div class="mb-3">
        <label for="Ploc" class="form-label">Project loction</label>
        <input type="text" class="form-control" id="Ploc" name="Ploc" value="@Model.Plocation">
    </div>
    <div class="mb-3">
        <label for="city" class="form-label"> City</label>
        <input type="text" class="form-control" id="city" name="city" value="@Model.City">
    </div>
    <div class="mb-3">
        <label for="Departments" class="form-label"> Deparments</label>
        <select class="form-select" aria-label="Default select example" name="Dnum">
            @foreach (Department item in ViewBag.departments)
            {
                if(Model.Dnum==item.Dnum){
                    <option value="@item.Dnum" selected>@item.Dname</option>
                }
                else
                {
                    <option value="@item.Dnum">@item.Dname</option>

                }
                    
                
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>