@{
    //Layout = "_CustomLayout";
}
@model Employee


<div class="card">
  <div class="card-body">
    <h5 class="card-title">Employee Details</h5>
    <h6 class="card-subtitle mb-2 text-muted">@Model.Fname @Model.Lname</h6>
    <p class="card-text">@Model.Address</p>
    <p class="card-text">@Model.Sex</p>
    <p class="card-text">@Model.Bdate</p>
    <p class="card-text">@Model.Salary</p>
    <a href="/employee/index" class="card-link">Back To List</a>
  </div>
</div>


@section Slide_title {
    @Model.Fname @Model.Lname
}