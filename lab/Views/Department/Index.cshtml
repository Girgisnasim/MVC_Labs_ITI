@{
    int i=1;
}
@model List<Department>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">More Details</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@(i++)</th>
                <td>@item.Dname</td>
                <td><a href="/department/Details/@item.Dnum"><i class="fa-solid fa-circle-info"></i></a></td>
                <td><a href="/department/Edit/@item.Dnum"><button class="btn btn-primary">Update</button></a></td>
                <td><a href="/department/Delete/@item.Dnum"><button class="btn btn-danger">Delete</button></a></td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a href="/department/getaddform"><button class="btn btn-primary">Add</button></a>
</div>
@section Slide_title {
    All Departments
}